<Page x:Class="SnakeWPF.Pages.EndGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SnakeWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EndGame">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Image/123.jpg"/>
        </Grid.Background>
        <Grid Width="330"
              Height="210"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <Grid.Background>
                <ImageBrush ImageSource="/Image/свиток.png"/>
            </Grid.Background>
            <Label
                x:Name="name"
                Content="kotek"
                Margin="45,22,45,0"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                FontFamily="Forte"
                FontSize="18"/>
            <Label
                x:Name="glasses"
                Content="90 glasses"
                Margin="45,50,45,0"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                FontFamily="Forte"/>
            <Button Click="OpenHome"
                Content="Main Menu"
                HorizontalAlignment="Left"
                Margin="45,0,0,40"
                VerticalAlignment="Bottom"
                Width="230"
                Height="25" FontFamily="Forte"/>
            <Label x:Name="top"
                Content="999"
                Margin="45,65,45,0"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                FontFamily="Forte"
                Height="84" VerticalContentAlignment="Center" FontSize="48"/>
        </Grid>
    </Grid>
</Page>
